@model CompetitionTracker.Models.CompetitionViewModel
<h1>Competition</h1>
<h3><small>If you've decided against playing in the competition please contact an Administrator.</small></h3>
<form method="post" action="/manage/competition" >    <div class="col-md-10">
        <div class="checkbox">
            <input asp-for="IsCompeting" class="checkbox" /><label asp-for="IsCompeting" class="control-label"></label>
        </div>
        <span asp-validation-for="IsCompeting" class="text-danger"></span>
    </div>
        <div class="col-md-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
</form>
